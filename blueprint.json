        "language": "sh",
        "content": "#!/bin/sh\r\nmkdir -p  /engines/var/run/flags/\r\nPID_FILE=/home/app/logs/ts3server.pid\r\n\r\nexport PID_FILE\r\n. /home/trap.sh\r\nexport LD_LIBRARY_PATH=\".:$LD_LIBRARY_PATH\"\r\n\r\n/home/app/ts3server &\r\npid=$!\r\necho $pid > /home/app/logs/ts3server.pid\r\nsleep 2\r\ntouch /engines/var/run/flags/startup_complete\r\nwait $pid\r\nrm /engines/var/run/flags/startup_complete\r\n\r\n"
      },
